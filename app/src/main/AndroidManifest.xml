<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.favoritedishes">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.FavDishApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FavoriteDishes">
        <activity
            android:name=".view.activities.AddUpdateDishActivity"
            android:label="Add Dish"
            android:theme="@style/Theme.FavoriteDishes.NoActionBar"
            android:exported="true"
            android:configChanges="orientation"/>
        <activity
            android:name=".view.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.FavoriteDishes.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"></activity>
    </application>

</manifest>